<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ECC71"
    tools:context=".GUI.MainMenu">

    <TextView
        android:id="@+id/Text_mainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="8dp"
        android:text="@string/main_menu"
        android:textColor="#191414"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/Button_Game"
        android:layout_width="407dp"
        android:layout_height="114dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/playbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_mainMenu"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/Button_Options"
        android:layout_width="407dp"
        android:layout_height="114dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/optionbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Game"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/Button_help"
        android:layout_width="412dp"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/helpbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Options"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Text_playText"
        android:layout_width="54dp"
        android:layout_height="32dp"
        android:layout_marginTop="80dp"
        android:text="@string/play"
        android:textColor="#F8F3F3"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/Button_Game"
        app:layout_constraintTop_toTopOf="@+id/Button_Game" />

    <TextView
        android:id="@+id/Text_optionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/options"
        android:textColor="#F6F3F3"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/Button_Options"
        app:layout_constraintTop_toTopOf="@+id/Button_Options" />

    <TextView
        android:id="@+id/Text_helpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        android:text="@string/help"
        android:textColor="#F4EFEF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/Button_help"
        app:layout_constraintTop_toTopOf="@+id/Button_help" />

    <TextView
        android:id="@+id/mainScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="47dp"
        android:text="@string/high_scores"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Music"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>