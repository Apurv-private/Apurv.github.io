<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ECC71"
    tools:context=".GUI.Help">

    <TextView
        android:id="@+id/Text_authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="@string/authors"
        android:textColor="#150606"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_helpScreen" />
    

    <TextView
        android:id="@+id/Text_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:clickable="true"
        android:focusable="true"
        android:textColorLink="#0000FF"
        android:text="@string/website"
        app:layout_constraintTop_toBottomOf="@+id/Text_authors"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Text_gameRules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/gamerules"
        android:textColor="#170A0A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_link" />

    <TextView
        android:id="@+id/Text_gameBasics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setup"
        android:textColor="#1C0F0F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_gameRules" />

    <TextView
        android:id="@+id/Text_howToPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rules"
        android:textColor="#090404"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_gameBasics" />

    <TextView
        android:id="@+id/Text_endGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/objective"
        android:textColor="#190505"
        app:layout_constraintTop_toBottomOf="@+id/Text_howToPlay"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/Text_helpScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/help"
        android:textColor="#0E0606"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Text_citationPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/play_citation"
        android:textColorLink="#0000FF"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_citation"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/Text_citationOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option_citation"
        android:autoLink="all"
        android:clickable="true"
        android:focusable="true"
        android:textSize="10sp"
        android:textColorLink="#0000FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_citationPlay"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/Text_citationHelp"
        android:layout_width="wrap_content"
        android:textColorLink="#0000FF"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/help_citation"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_citationOption"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/Text_citation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/citations"
        android:textColor="#221717"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_endGame" />
</androidx.constraintlayout.widget.ConstraintLayout>