<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Model.MainMenu">

    <ImageButton
        android:id="@+id/Button_Options"
        android:layout_width="119dp"
        android:layout_height="69dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_option_foreground"
        app:layout_constraintStart_toStartOf="@+id/Button_StartGame"
        app:layout_constraintTop_toBottomOf="@+id/Button_StartGame"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/Button_StartGame"
        android:layout_width="119dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="33dp"
        android:src="@mipmap/ic_start_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_mainMenu"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/Button_Help"
        android:layout_width="119dp"
        android:layout_height="69dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/ic_help_foreground"
        app:layout_constraintStart_toStartOf="@+id/Button_Options"
        app:layout_constraintTop_toBottomOf="@+id/Button_Options" />

    <TextView
        android:id="@+id/boardSizeMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/current_board_size"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/numVirusesMainMenu"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/numVirusesMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/number_of_viruses"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/NumVirusSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/numVirusesMainMenu" />

    <TextView
        android:id="@+id/boardSizeSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/NumVirusSelected"
        app:layout_constraintStart_toEndOf="@+id/boardSizeMainMenu" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="57dp"
        android:layout_height="36dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="@string/play"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/Button_StartGame"
        app:layout_constraintTop_toTopOf="@+id/Button_StartGame" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:text="@string/options"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/Button_Options"
        app:layout_constraintTop_toBottomOf="@+id/Button_StartGame" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/help"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/Button_Help"
        app:layout_constraintTop_toTopOf="@+id/Button_Help" />

    <TextView
        android:id="@+id/Text_mainMenu"
        android:layout_width="129dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:text="Main Menu"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Button_music"
        android:layout_width="43dp"
        android:layout_height="51dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="92dp"
        android:clickable="true"
        android:src="@drawable/ic_baseline_music_note_24"
        app:layout_constraintStart_toEndOf="@+id/Button_Options"
        app:layout_constraintTop_toBottomOf="@+id/Text_mainMenu"
        app:srcCompat="@drawable/ic_baseline_music_note_24" />

</androidx.constraintlayout.widget.ConstraintLayout>