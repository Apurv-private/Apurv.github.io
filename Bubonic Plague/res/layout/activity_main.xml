<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Text_By"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="44dp"
        android:text="@string/by"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/Text_Name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Text_Name"
        android:layout_width="178dp"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"
        android:text="Apurv Nerurkar\nPreetinder Singh"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/Text_By"
        app:layout_constraintTop_toBottomOf="@+id/Image_Preet"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/Button_skipAnimation"
        android:layout_width="102dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="4dp"
        android:text="@string/skip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Image_Apurv"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/Image_Preet"
        android:layout_width="182dp"
        android:layout_height="207dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/Image_Apurv"
        app:layout_constraintTop_toBottomOf="@+id/Text_gameName"
        app:srcCompat="@mipmap/ic_preet_foreground"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/Text_gameName"
        android:layout_width="212dp"
        android:layout_height="37dp"
        android:layout_marginTop="4dp"
        android:text="@string/bubonicplague"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Image_Apurv"
        android:layout_width="182dp"
        android:layout_height="207dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/Image_Preet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.655"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_gameName"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_apurv_foreground"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>